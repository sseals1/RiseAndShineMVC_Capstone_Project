<!DOCTYPE html>
<html lang="en">
<style type="text/css">
    body {
        background-image: url('https://the-car-wash.com/wp-content/uploads/2017/09/intext-cleaning.jpg');
        margin: 0;
        background-repeat: no-repeat;
        background-size: cover
    }
</style>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RiseAndShine</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/bootstrap(3).css" />
</head>
<body>
    <header

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light  border-bottom box-shadow mb-3">

            <div class="container">
                <a href="@Url.Action("Index", "Home")" class="navbar-brand">
                    <h2 class="font-weight-bold">RISE & SHINE</h2>
                    <h5 text-align: center; >Detailing Service</h5>

                    @*<video width="320" height="240">
                        <source src="/Images/Rise & Shine.mp4" type="video/mp4" />
                    </video>*@
                    @*<img src="/Images/" title="title" alt="additional title" style="height:100px; width:100px;" />*@
                </a>

                <a class="navbar-brand text-dark" bg-primary asp-area="" asp-controller="Home" asp-action="Index"></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                                                    <li class="nav-item">
                                                        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
                                                    </li>
                        }
                        else
                        {
                                                    <li class="nav-item">
                                                        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                                                    </li>
                        }
                    </ul>





                    <ul class="navbar-nav flex-grow-1">
                                                <li class="nav-item">
                                                    <a class="nav-link text-dark" asp-area="" asp-controller="UserProfile" asp-action="Index">Admin</a>
                                                </li>
                        @*<li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>*@
                        <li class="nav-item"><link href="c:\Users\sseal\Downloads\bootstrap.css" rel="stylesheet" />
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="UserProfile" asp-action="Details">Account Details</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="ServiceRequest" asp-action="Details">Service Requests</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Vehicle" asp-action="Index">Manage Vehicles</a>
                        </li>
                    </ul>
                </div>
            </div>





        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - RiseAndShine - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

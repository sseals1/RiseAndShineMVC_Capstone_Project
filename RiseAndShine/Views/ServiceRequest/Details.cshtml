@model RiseAndShine.Models.ViewModels.ServiceRequestUserProfileViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<hr />
<div>
    <h4>Service Requests</h4>
    <div class="container-fluid">
        <dd>
            <dl class="row">
  
                    @foreach (ServiceRequest sr in Model.ServiceRequests)
                    {
                        <div class="card m-4" style="width: 30rem height:20rem ;">
                            <div class="container">
                                <div class="row">
                                    <div class="col-xs-12">
                                        <dd>
                                            <div>
                                                <label class="font-weight-bold">Service Provider:</label>
                                                <span>@sr.UserProfile.Name</span>
                                            </div>
                                            <div>
                                                <label class="font-weight-bold">Service Date:</label>
                                                <span>@sr.ServiceDate</span>
                                            </div>

                                            <form>
                                                <label class="font-weight-bold">Notes:</label>
                                                <input type="text" name="@sr.Note"/>
                                            </form>

                                            <div>
                                                <select asp-for="@sr.DetailTypeId" class="form-control">
                                                    <option border="dark" value="PackageType.Id">select package type...</option>
                                                    @foreach (PackageType pt in Model.PackageTypes)
                                                    {
                                                        <option value="@pt.Id">@($"{pt.Name} ${pt.Price}")</option>
                                                    }
                                                </select>
                                            </div>


                                            <form asp-route-Id="@Model.Vehicle.Id" asp-controller="ServiceRequest" asp-action="Edit">
                                                <input type="submit" method="post" value="SELECT SERVICE REQUEST" text-center class="btn btn-outline-dark" type="button" />
                                            </form>

                                            <div>
                                            </div>

                                        </dd>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

            </dl>
        </dd>
        <div>
        </div>
        <div>

            <a asp-action="Details">Back to List</a>
        </div>

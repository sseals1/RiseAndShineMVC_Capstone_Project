@model RiseAndShine.Models.ServiceRequest

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>ServiceRequest</h4>
    <div class="container-fluid">
        <dd>
            <dl class="row">
                <h6>Available Service Requests</h6>
                @foreach (ServiceRequest sr in Model.ServiceRequests)
                {
                    <div class="card m-4" style="width: 30rem height:40rem ;">
                        <div class="container">
                            <div class="row" style="background-color: lightcoral;">
                                <div class="col-xs-12">
                                    <dd>
                                        <div>
                                            <label class="font-weight-bold">Service Provider:</label>
                                            <span>@Model.UserProfile.Name</span>
                                        </div>
                                        <div>
                                            <label class="font-weight-bold">Service Date:</label>
                                            <span>@sr.ServiceDate.Date</span>
                                        </div>
                                        <div>
                                            <label class="font-weight-bold">Package Type:</label>
                                            <select asp-for="@sr.Package.Id" style="color:dodgerblue" autofocus>
                                                <span>@sr.Package.Name</span>
                                                <label class="font-weight-bold">Price:</label>
                                                <span>@($"${sr.Package.Price}")</span>
                                            </select>
                                        </div>
                                        <span>
                                            <a type="button" text-right class="btn btn-outline-dark" asp-controller="ServiceRequest" asp-action="Create">Select Service Request</a>
                                            @Html.ActionLink("Edit", "Edit", new { id=sr.Id}) |
                                            <a asp-action="Index">Back to List</a> |
                                            @Html.ActionLink("Delete", "Delete", new { id=sr.Id })
                                        </span>
                                        <div>
                                        </div>

                                    </dd>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </dl>
        </dd>
        ...
    </div>
<div>
